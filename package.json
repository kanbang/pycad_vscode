{
    "name": "pycad",
    "displayName": "pycad",
    "description": "script draw",
    "version": "0.0.1",
    "publisher": "kk",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:pycad.runpycad"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "pycad.runpycad",
                "title": "Run11"
            }
        ],
        "menus": {
                "editor/title": [
                    {
                        "command": "pycad.runpycad",
                        "when": "editorLangId == python",
                        "group": "navigation"
                    }
          ]
        },
    
        "configuration": {
            "type": "object",
            "title": "configuration",
            "properties": {
            "pycad.auto": {
                "type": "string",
                "enum": [
                "off",
                "messages",
                "verbose"
                ],
                "default": "off",
                "description": "Test enum."
            },
            "pycad.exepath": {
                "type": "string",
                "default": "d:\\test.exe",
                "description": "pycad path."
                }            
            }
        }
        
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
